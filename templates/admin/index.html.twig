{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
{{ parent()}}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello ! ✅</h1>
    <a href="{{ path("addFormation") }}">Créer une nouvelle formation</a>
    {% for formation in listeFormations %}
        <li>
            <a href="{{path("formation", {nom: formation.nom}) }}">{{ formation.nom }}</a>
            <a href="{{ path("modFormation", {id: formation.id}) }}">Modifier</a>
            <a href="{{ path("supFormation", {id: formation.id}) }}">Supprimer</a>
        </li>
    {% endfor %}
</div>
{% endblock %}
